# Set Super as mod key
set $mod Mod4

# Drag floating windows
floating_modifier $mod

# Customise the window appearance
include ./appearance.conf

# Include all modes
include ./modes/resize.conf

# Workspace names, screens and keyboard shortcuts
include ./workspaces.conf

# Define user keybindings
include ./keybindings/general.conf
include ./keybindings/apps.conf

# Startup applications
include ./startup/services.conf
include ./startup/settings.conf
