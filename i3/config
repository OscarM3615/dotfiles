# Set Super as mod key
set $mod Mod4

# Enable gaps
gaps inner 10

# Font for window titles
font pango:FiraCode 10

# Window border style
default_border pixel
default_floating_border normal
title_align center

# Colour variables
set $black0 #282c34
set $black1 #3e4452
set $red0 #e06c75
set $red1 #be5046
set $green #98c379
set $yellow0 #e5c07b
set $yellow1 #d19a66
set $blue #61afef
set $purple #c678dd
set $cyan #56b6c2
set $gray0 #abb2bf
set $gray1 #5c6370

# class                 border  background      text    indicator
client.focused          $red0   $red0           $black0 $red1
client.focused_inactive $black0 $black0         $gray0  $black0
client.unfocused        $black0 $black0         $gray0  $black0
client.urgent           $red1   $red1           $black0 $red1

# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3

# Enable auto lock for 5 minutes
exec --no-startup-id xautolock -time 5 -locker "loginctl lock-session" -detectsleep

# Start gnome keyring
exec --no-startup-id gnome-keyring-daemon --start --components=pkcs11,secrets,ssh

# PulseAudio controls
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master 1+ toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next

# Brightness controls
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%

# Enable binding for screen lock
bindsym $mod+l exec --no-startup-id loginctl lock-session

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec --no-startup-id qterminal

# Kill focused window
bindsym $mod+q kill

# Start rofi (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -show drun -modi drun

# Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split direction
bindsym $mod+h split h
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Control+space floating toggle

# Define names for default workspaces
set $ws1 "1: "
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5: "
set $ws6 "6: "
set $ws7 "7: "
set $ws8 "8: "
set $ws9 "9: "
set $ws10 "10: "

# Define variables for screens
set $screen_left LVDS-0
set $screen_right VGA-0

# Assign workspaces to screens (fallback to LVDS-0 when no dual monitor available)
workspace $ws1 output $screen_left
workspace $ws2 output $screen_left
workspace $ws3 output $screen_left
workspace $ws4 output $screen_left
workspace $ws5 output $screen_left
workspace $ws6 output $screen_right $screen_left
workspace $ws7 output $screen_right $screen_left
workspace $ws8 output $screen_right $screen_left
workspace $ws9 output $screen_right $screen_left
workspace $ws10 output $screen_right $screen_left

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move container to workspace and switch to it
bindsym $mod+Ctrl+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Ctrl+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Ctrl+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Ctrl+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Ctrl+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Ctrl+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Ctrl+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Ctrl+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Ctrl+Shift+9 move container to workspace number $ws9; workspace number $ws9
bindsym $mod+Ctrl+Shift+0 move container to workspace number $ws10; workspace number $ws10

# Move workspace to screen
bindsym $mod+Control+Left move workspace to output left
bindsym $mod+Control+Right move workspace to output right

# Assign applications to workspaces
for_window [class="Thunar"] move to workspace $ws5
for_window [class="discord"] move to workspace $ws8
for_window [class="Droidcam"] move to workspace $ws8
for_window [class="Google-chrome" title="ClickUp"] move to workspace $ws9
for_window [class="Spotify"] move to workspace $ws10

# Default floating windows
for_window[class="Orage"] floating enable

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Resize window
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt

        # Back to normal: Escape or Super+r
        bindsym $mod+r mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Power menu
bindsym $mod+Shift+q exec --no-startup-id rofi -show power -modi power:~/.config/polybar/scripts/rofi-power-menu

# Print screen
bindsym Print exec --no-startup-id flameshot screen
bindsym Shift+Print exec --no-startup-id flameshot gui

# Applications
bindsym $mod+space exec --no-startup-id google-chrome-stable
bindsym $mod+Shift+space exec --no-startup-id google-chrome-stable --incognito
bindsym $mod+e exec --no-startup-id thunar
bindsym $mod+s exec --no-startup-id spotify

# Start scripts
exec --no-startup-id xrandr --output LVDS-0 --primary --mode 1366x768 --left-of VGA-0
exec_always --no-startup-id setxkbmap -model latitude -layout us,es -option 'compose:ralt,grp:shift_caps_toggle'
exec_always --no-startup-id xset r rate 250 20
exec --no-startup-id xinput set-prop "AlpsPS/2 ALPS DualPoint Stick" "Device Enabled" 0
exec --no-startup-id xinput set-prop "AlpsPS/2 ALPS DualPoint TouchPad" "libinput Disable While Typing Enabled" 0
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec --no-startup-id feh --bg-fill ~/.config/i3/wallpaper.png
exec --no-startup-id picom -f -D 5 -i 1
exec --no-startup-id dunst
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
